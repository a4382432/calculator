   #include <stdio.h>
   #include <string.h>
  
   /* 수식 입력 후 변수와 숫자 를 문자열로 받아들이는 함수 */
   /*포인터 이용해서 변수와 숫자를 연결 시켜줄 예정*/

  
   int main()
   {       int i,count=0;
           char x;
           char a[60],tmp[60] ,b[64], c[10];
          scanf("%[^\n]",b);  // 한번에 입력을 64자리를 받는다 (X = 이 4자리 추가됨) 이후에 변수설정인 경우와 아닌경우 나눠줌
 
          if(b[2]=='=')  // 수식입력했을 때 = 이 있을 경우
          { if(count<11)  // 변수 최대 10개만 선언 할 수 있게끔
          {   c[count]=b[0];
              for(i=4;i<64;i++)
                  tmp[i-4]=b[i];  // = 뒤에 수를 다른 배열에 저장
                      count++;}}
         else if(b[60]!=NULL)
           { printf("Error");}// 수식 입력했을 때 변수설정이 아니고 60자리를 넘었을 경우 오류 처리
         else
           {   for(i=0;i<60;i++)
                    tmp[i]=b[i];}
          printf("%c = %s", c[0], tmp);
          return 0;}
